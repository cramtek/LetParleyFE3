{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "paths": {
      "*": ["./src/*"]
    }

    // "checkJs": true
    // "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
